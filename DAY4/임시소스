        <ProgressBar x:Name="prg" Minimum="0" Maximum="100" Value="10"/>
        <Button x:Name="button" Content="button" Click="button_Click"/>
    </StackPanel>


    public static int Sum(int first, int last)
    {
        int s = 0;
        for (int i = first; i <= last; i++)
        {
            s += i;
            Thread.Sleep(10);
        }
        return s;
    }
