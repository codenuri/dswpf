<Window x:Class="_13_THREAD.Thread2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13_THREAD"
        mc:Ignorable="d"
        Title="Thread2" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="label" Height="50" Background="Yellow" Width="100"/>
        <ProgressBar x:Name="prg" Height="50" Minimum="0" Maximum="100" Value="10"/>
        <Button x:Name="button" Content="button" Click="button_Click"/>
    </StackPanel>
</Window>
