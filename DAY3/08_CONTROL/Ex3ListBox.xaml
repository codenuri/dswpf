<Window x:Class="_08_CONTROL.Ex3ListBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_CONTROL"
        mc:Ignorable="d"
        Title="Ex3ListBox" Height="450" Width="800">
    <Grid>
        <!-- Grid Row, Col 지정하지 않으면 0, 0만존재 -->

        <ListBox x:Name="listbox">
            <!-- 아이템을 추가 하려면 ListBox.Items 사이에 ListBox Item 넣으면됩니다. -->
            <ListBox.Items>

                <ListBoxItem Content="AAA"/>
                <ListBoxItem Content="BBB"/>

                <ListBoxItem>
                    <Button Content="button"/>
                </ListBoxItem>

                <ListBoxItem Background="Red">
                    <StackPanel Orientation="Horizontal" Background="Yellow">
                        <CheckBox></CheckBox>
                        <Label Content="CCC"/>
                    </StackPanel>
                </ListBoxItem>


            </ListBox.Items>
        </ListBox>
        
    </Grid>
</Window>
